<% if session[:success] %>
	<div class = "flash success">
		<p><%= session.delete(:success)%></p>
	</div>
<% end %>

<ul id = "lists">
	<% @lists .each do |list| %>
		<li>
			<a>
				<h2><%= list[:name] %></h2>
				<p><%=list[:todos].size %></p>
			</a>
		</li>
	<% end %>
</ul>

<br>
<a href = "/lists/new">
	<h3>Create a New List</h3>
</a>