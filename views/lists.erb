<ul id = "lists">
	<% @lists.each_with_index do |list, index| %>
		<li <%= list_class(list) %>>
			<a href = "/lists/<%= index %>">
				<h2><%= list[:name] %></h2>
				<%=todos_completed(list)%>
			</a>
		</li>
	<% end %>
</ul>

<% content_for :header_links do %>
	<a class = "add" href = "/lists/new"><strong>New List</strong></a>
<% end %>