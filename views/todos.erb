<section id = "todos" <%= list_class(@list) %>>
	<header class>
		<h2><%= @name %></h2>
		<ul>
			<li>
				<form action="/lists/<%= @id %>/complete_all" method="post">
  				<button class="check" type="submit">Complete All</button>
				</form>
			</li>
			<li><a class = "edit" href = "/lists/<%= @id %>/edit">Edit List</a></li>
		</ul>
	</header>

	<% unless @todos.empty? %>
		<ul>
		<% sort_items(:items).each_with_index do |todo, todo_index| %>
			<li
			<% if todo[:completed] %>
				class = "complete"
			<% else %>
				class = ""
			<% end %>>
				<form action="/lists/<%= @id %>/todos/<%= get_original_indicies(:todos)[todo_index] %>" 
					method="post" class="check">
					<input type="hidden" name="completed" value="<%= !todo[:completed] %>"/>
					<button type="submit">Complete</button>
				</form>

				<h3><%= todo[:name] %></h3>
				<form action="/lists/<%= @id %>/todos/<%= get_original_indicies(:todos)[todo_index] %>/delete" 
					method="post" class="delete">
  				<button type="submit">Delete</button>
				</form>
			</li>
		<% end %>
		</ul>
	<% end %>
</section>

<% content_for :header_links do %>
	<a class = "list" href = "/lists"><strong>All Lists</strong></a>
<% end %>

<form action="/lists/<%= @id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value= "<%= params[:todo]%>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>