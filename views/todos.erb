<section id = "todos">
	<header>
		<h2><%= @name %></h2>
		<ul>
			<li><a class = "edit" href = "/lists/<%= @index %>/edit">Edit List</a></li>
		</ul>
		<% unless @todos.empty? %>
			<ul>
			<% @todos.each do |todo| %>
				<li>
					<h2><%= todo %></h2>
				</li>
			<% end %>
			</ul>
		<% end %>
	</header>
</section>

<% content_for :header_links do %>
	<a href = "/lists"><h2>All Lists</h2></a>
<% end %>