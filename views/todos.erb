<section id = "todos">
	<header>
		<h2><%= @name %></h2>
		<ul>
			<li><a class = "edit" href = "/lists/<%= @id %>/edit">Edit List</a></li>
		</ul>
	</header>

	<% unless @todos.empty? %>
		<ul>
		<% @todos.each_with_index do |todo, todo_index| %>
			<li>
				<h3><%= todo[:name] %></h3>
				<form action="/lists/<%= @id %>/todos/<%= todo_index %>/delete" method="post" class="delete">
  				<button type="submit">Delete</button>
				</form>
			</li>
		<% end %>
		</ul>
	<% end %>
</section>

<% content_for :header_links do %>
	<a href = "/lists"><h2>All Lists</h2></a>
<% end %>

<form action="/lists/<%= @id %>/todos" method="post">
  <dl>
    <dt>
      <label for="todo">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo" id="todo" placeholder="Something to do" type="text" value= "<%= params[:todo]%>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>