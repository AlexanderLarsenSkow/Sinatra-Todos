<section id = "todos">
	<header>
		<h2>Editing '<%= @stored_name %>'</h2>
		<ul>
			<li>
				<form class = "delete" action = "/lists/<%= @id %>/delete" method = "post">
					<button type = 'submit' class = 'delete'>Delete List</button>
				</form>	
		</ul>		
	</header>
</section>

<form action = "/lists/<%= @id %>" method = "post">
	<dl>
		<dt>
			<label for = "list_name">Enter the new name for your list.</label>
		</dt>	
		<dd>
			<input name = "list_name" place_holder = "List Name" type = "text"
				 value = "<%= params["list_name"] || @stored_name %>">
		</dd>
	</dl>
	<fieldset class = "actions">
		<input type = "submit" values = "Save">
		<a href ="/lists/<%= @id %>">Cancel</a>
	</fieldset>
</form>	